---
// Header component - handles auth state display
---

<header class="flex items-center justify-between h-20 mb-12">
  <a href="/" class="group flex items-center gap-2.5 transition-all">
    <div class="relative flex items-center justify-center w-10 h-10 rounded-xl bg-primary-600 dark:bg-primary-500 shadow-lg shadow-primary-500/20 group-hover:scale-105 transition-transform">
      <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
        <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
      </svg>
    </div>
    <div class="flex flex-col">
      <span class="text-xl font-bold tracking-tight text-gray-900 dark:text-white leading-none">Days</span>
      <span class="text-[10px] font-bold text-primary-600 dark:text-primary-400 uppercase tracking-widest mt-1">Shortlink</span>
    </div>
  </a>

  <!-- Auth buttons (not logged in) -->
  <div id="auth-buttons" class="flex items-center gap-3">
    <button id="btn-login" class="btn-ghost text-sm font-semibold">登录</button>
    <div class="h-4 w-[1px] bg-gray-200 dark:bg-white/10 mx-1"></div>
    <button id="btn-register" class="btn-primary text-sm !px-6 !py-2">免费加入</button>
  </div>

  <!-- User panel (logged in) -->
  <div id="user-panel" class="hidden items-center gap-4">
    <div class="flex flex-col items-end">
      <span id="username" class="text-sm font-semibold text-gray-900 dark:text-white leading-none"></span>
      <span class="text-[10px] text-gray-400 dark:text-slate-500 uppercase tracking-wider mt-1">已登录用户</span>
    </div>
    <div class="h-8 w-[1px] bg-gray-200 dark:bg-white/10"></div>
    <button id="btn-logout" class="p-2 text-gray-400 hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-950/30 rounded-lg transition-colors" title="退出登录">
      <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
        <polyline points="16 17 21 12 16 7"></polyline>
        <line x1="21" y1="12" x2="9" y2="12"></line>
      </svg>
    </button>
  </div>
</header>
