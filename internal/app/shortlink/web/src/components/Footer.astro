---
// Footer component
interface Props {
  homeUrl?: string;
  githubUrl?: string;
}

const {
  homeUrl = '/',
  githubUrl = '#'
} = Astro.props;

const year = new Date().getFullYear();
---

<footer class="py-12 mt-auto border-t border-gray-100 dark:border-white/5">
  <div class="flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="flex items-center gap-2">
      <div class="w-6 h-6 rounded bg-gray-100 dark:bg-white/5 flex items-center justify-center">
        <svg class="w-3.5 h-3.5 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
          <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
        </svg>
      </div>
      <span class="text-xs font-bold text-gray-400 dark:text-slate-500 uppercase tracking-widest">© {year} Days Shortlink</span>
    </div>

    <nav class="flex items-center gap-6">
      <a href={homeUrl} class="text-xs font-bold text-gray-500 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 uppercase tracking-widest transition-colors">主页</a>
      {githubUrl && githubUrl !== '#' && (
        <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="text-xs font-bold text-gray-500 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 uppercase tracking-widest transition-colors">GitHub</a>
      )}
      <a href="#" class="text-xs font-bold text-gray-500 dark:text-slate-400 hover:text-primary-600 dark:hover:text-primary-400 uppercase tracking-widest transition-colors">隐私政策</a>
    </nav>
  </div>
</footer>
